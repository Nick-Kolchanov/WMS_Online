@model NomenclatureProperty
@{
    ViewData["Title"] = "Добавление арактеристики";

    var Properties = (SelectList)ViewData["Properties"]!;
}

<h1>@ViewData["Title"]:</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    
    <label>Свойство</label>
    <p>
    <select name="PropertyId" asp-items="Properties"></select>
    </p> 

    <label>Значение</label>
    <p>
    <input type="text" name="Value"/>
    </p>

    @Html.Hidden("NomenclatureId", Model.NomenclatureId)
    
    <p>
        <input class="btn btn-default" type="submit" value="Отправить" />
    </p>
</form>
<form asp-action="Index" method="get">
    <input class="btn btn-default" type="submit" value="Назад" />
</form>